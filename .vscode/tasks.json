{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run",
      "type": "shell",
      "dependsOn": [
        "Build",
        "Run"
      ],
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Rebuilds Release mode then launches BongoCat.exe."
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "msbuild",
        "CatnipMod\\CatnipMod.csproj",
        "/t:Rebuild",
        "/p:Configuration=Release",
        "/p:BuildingInsideVisualStudio=true"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Rebuilds Release mode using MSBuild with Visual Studio-specific properties."
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\run.ps1",
        "-Workspace",
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Launches BongoCat via Steam using the app ID from Directory.Local.props or Directory.Build.props."
    },
    {
      "label": "Open Game Folder",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\open-game-folder.ps1",
        "-Workspace",
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Opens the BongoCat installation folder in Windows Explorer."
    },
    {
      "label": "Open Log File",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\open-log-file.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Opens the BongoCat Player.log file in the default text editor."
    }
  ]
}