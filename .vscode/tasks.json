{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & Run",
      "type": "shell",
      "dependsOn": [
        "Build",
        "Run"
      ],
      "dependsOrder": "sequence",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Rebuilds Release mode then launches BongoCat.exe."
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "msbuild",
        "CatnipMod\\CatnipMod.csproj",
        "/t:Rebuild",
        "/p:Configuration=Release",
        "/p:BuildingInsideVisualStudio=true"
      ],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Rebuilds Release mode using MSBuild with Visual Studio-specific properties."
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\run.ps1",
        "-Workspace",
        "${workspaceFolder}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "detail": "Launches BongoCat.exe using the path from Directory.Local.props or Directory.Build.props."
    }
  ]
}